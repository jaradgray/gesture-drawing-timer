<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GestureDrawingTimer.res">

    <!-- TODO maybe define all colors here, and only assign references to them to control colors below -->
    <Color x:Key="Window.Background">#FF121212</Color>

    <!-- Button.Normal -->
    <SolidColorBrush x:Key="Button.Background" Color="#19FFFFFF"/> <!-- 10% white -->
    <SolidColorBrush x:Key="Button.Border" Color="Transparent"/>
    <SolidColorBrush x:Key="Button.Foreground" Color="#DDFFFFFF"/>
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#23FFFFFF"/> <!-- 14% white -->
    <SolidColorBrush x:Key="Button.MouseOver.Border" Color="Transparent"/>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="#33FFFFFF"/> <!-- 20% white -->
    <SolidColorBrush x:Key="Button.Pressed.Border" Color="Transparent"/>
    <SolidColorBrush x:Key="Button.Disabled.Background" Color="#19FFFFFF"/> <!-- 10% white -->
    <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#61FFFFFF"/>
    <SolidColorBrush x:Key="Button.Disabled.Border" Color="Transparent"/>

    <!-- Button.HighEmphasis -->
    <SolidColorBrush x:Key="Button.HighEmphasis.Background" Color="#0166dc"/>
    <SolidColorBrush x:Key="Button.HighEmphasis.Border" Color="Transparent"/>
    <SolidColorBrush x:Key="Button.HighEmphasis.MouseOver.Background" Color="#0b6cdd"/> <!-- background with 4% white overlay -->
    <SolidColorBrush x:Key="Button.HighEmphasis.MouseOver.Border" Color="Transparent"/>
    <SolidColorBrush x:Key="Button.HighEmphasis.Pressed.Background" Color="#1b76e0"/> <!-- background with 10% white overlay -->
    <SolidColorBrush x:Key="Button.HighEmphasis.Pressed.Border" Color="Transparent"/>
    <SolidColorBrush x:Key="Button.HighEmphasis.Disabled.Background" Color="#3DFFFFFF"/>
    <SolidColorBrush x:Key="Button.HighEmphasis.Disabled.Foreground" Color="#61FFFFFF"/>
    <SolidColorBrush x:Key="Button.HighEmphasis.Disabled.Border" Color="Transparent"/>
    
    <!-- IconButton.Normal -->
    <SolidColorBrush x:Key="IconButton.Background" Color="#7F000000"/>
    <SolidColorBrush x:Key="IconButton.Border" Color="Transparent"/>
    <SolidColorBrush x:Key="IconButton.Foreground" Color="#DDFFFFFF"/>
    <SolidColorBrush x:Key="IconButton.MouseOver.Background" Color="#19FFFFFF"/> <!-- 10% white -->
    <SolidColorBrush x:Key="IconButton.MouseOver.Border" Color="Transparent"/>
    <SolidColorBrush x:Key="IconButton.Pressed.Background" Color="#35FFFFFF"/> <!-- 14% white -->
    <SolidColorBrush x:Key="IconButton.Pressed.Border" Color="Transparent"/>
    <SolidColorBrush x:Key="IconButton.Disabled.Background" Color="#19FFFFFF"/> <!-- 10% white -->
    <SolidColorBrush x:Key="IconButton.Disabled.Foreground" Color="#61FFFFFF"/>
    <SolidColorBrush x:Key="IconButton.Disabled.Border" Color="Transparent"/>

</ResourceDictionary>